@model IEnumerable<MvcUniversity.Models.Teacher>

<div class="category-wrapper">
    <div class="container">
        <div class="row py-2">
            <div class="col-6">
                <h2 class="text-primary">Teacher List</h2>
            </div>
            <div class="col-6">
                <a class="btn btn-primary" asp-controller="Teachers" asp-action="Add">
                    <i class="fa-solid fa-plus"></i> Add New Teacher
                </a>
            </div>
        </div>
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Fullname</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Level</th>
                        <th>Course</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teacherObj in Model)
                    {
                    <tr>
                        <td width="20%">@teacherObj.Fullname</td>
                        <td width="20%">@teacherObj.Address</td>
                        <td width="10%">@teacherObj.Email</td>
                        <td width="10%">@teacherObj.Phone</td>
                        <td width="10%">@teacherObj.Level</td>
                        <td width="20%">@teacherObj.Course</td>
                        <td width="10%" class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-info mx-1" asp-route-id="@teacherObj.Id" asp-controller="Teachers" asp-action="Edit"><i class="fa-solid fa-pen"></i></a>
                                <a class="btn btn-danger mx-1" asp-route-id="@teacherObj.Id" asp-controller="Teachers" asp-action="Delete"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No category found</p>
        }
    </div>
</div>